<%= render 'users/info', user:@user %>


<div class="col-md-8 offset-md-1">

<h2>Books</h2>

<table class = "table">
<thead>
  <tr>
   <th>Title</th>
   <th>Opinion</th>
   <th colspan="3"></th>
  </tr>
</thead>

<% @books.each do |book| %>
 <tr>
  <td><%= link_to user_path(@user) do %>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size: "50x50" %>
      <% end %>
  </td>
  <td><%= link_to book.title, book_path(book.id) %></td>
  <td><%= book.body %></td>
 </tr>
      <% end %>

 </div>