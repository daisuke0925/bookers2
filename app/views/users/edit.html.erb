

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<% if @user.errors.any? %>
  <div id="error_explanation"><h2><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
  <ul><% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %></ul></div>
<% end %>


<h2>User info</h2>

<%= form_with model:@user, local:true do |f| %>

<div class ="form-group">
 <h6>Name</h6>
  <%= f.text_field :name %>
</div>

<div class="form-group">
 <h6>Image</h6>
  <%= f.attachment_field :profile_image %>
</div>

<div class="form-group">
 <h6>Introduction</h6>
  <%= f.text_area :introduction %><br>
</div>

 <div class="form-group">
  <div><%= f.submit 'Update User', class: "btn btn-secondary" %></div>
 </div>

<% end %>
</div>
</div>
</div>





