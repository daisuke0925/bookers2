<%= render 'users/info', user:@user %>

<div class="col-md-8 offset-md-1">

<h2>Users</h2>

<table class = "table">
<thead>
  <tr>
   <th>image</th>
   <th>name</th>
   <th colspan="3"></th>
  </tr>
</thead>

<tbody>
 <% @users.each do |user| %>
	<tr>
	 <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size: "50x50" %></td>
	 <td><%= user.name %></td>
	 <td><%= link_to "Show", books_path %></td>
	</tr>
<% end %>

</div>
