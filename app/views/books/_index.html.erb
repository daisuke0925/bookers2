<div class="container px-5 px-sm-0">
  <div class = "row">
    <div class="col-md-3">
     <%= render 'users/info', user:@user %>

     <h2>New book</h2>

     <%= form_with model:@book, local:true do |f| %>

       <label for="title">Title</label>
       <input type="text" class="form-control" name="book[title]" id="title">

       <label for="body">Opinion</label>
       <textarea class="form-control" name="book[body]" id="opinion"></textarea>

       <div class="actions row"></div>

       <div><%= f.submit 'Create Book',class:"btn btn-success" %></div>
       <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
    <% @books.each do |book| %>
    <table class="table">
 <h2>Books</h2>
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
      <tr>
        <td>
          <div class="row">
          <%= link_to user_path(book.user) do %>
          <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50,fallback: "no_image.jpg" %>
          </div>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= link_to book.body, book_path(book.id) %></td>
      </tr>
          <% end %>
        </tbody>
      </table>
   </div>
  </div>
</div>


